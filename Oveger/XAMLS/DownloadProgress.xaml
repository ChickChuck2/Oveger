<Window x:Class="Oveger.XAMLS.DownloadProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oveger.XAMLS"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Title="DownloadProgress" Height="300" Width="500" WindowStyle="None" Initialized="Window_Initialized" MouseUp="Window_MouseUp">
    <Window.Background>
        <SolidColorBrush Opacity="0.75" Color="#FF1F1F1F"/>
    </Window.Background>
    <Grid>
        <TextBlock x:Name="TitleBlock" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Baixando {%s}" VerticalAlignment="Top" FontSize="48" FontWeight="Normal" Foreground="White"/>
        <ProgressBar x:Name="progressDownload" HorizontalAlignment="Center" Height="36" Margin="0,202,0,0" VerticalAlignment="Top" Width="274"/>
        <TextBlock x:Name="textcount" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White" FontSize="22" Width="182"/>

    </Grid>
</Window>
